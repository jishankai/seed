@charset "utf-8";
.new_activity { 
	width:960px; height:auto; position:relative; padding-top:400px; margin:0 auto; text-align:center;
	background:url(subject/img_0001/bg_01.jpg) no-repeat 0 0 #a5cfdb;			
	}
.new_activity img:first-child { margin-top:-70px; }


.new_btn { 
	display:block; position:absolute; right:10px; top:10px; width:156px; height:92px; line-height:92px; font-weight:bold; color:#fff; 
	background:url(subject/img_0001/btn.png) no-repeat 0 0;font-size:24px;
	text-shadow:1px 1px 1px #608528,-1px -1px 1px #608528,-1px 1px 1px #608528,1px -1px 1px #608528;
	}
.new_btn.hover { background:url(subject/img_0001/btn.png) no-repeat center bottom;}
.new_input { padding:20px 0;}
.new_input input {
	width:592px; height:58px; line-height:38px; padding:0 15px; background:#fff; border:none; color:#fff; display:inline-block; vertical-align:middle; font-size:26px;  margin-right:15px;
	-webkit-box-shadow:inset 1px 1px 5px rgba(0,0,0,.6); color:#333; 
	-webkit-border-radius:25px;
	}
	
.new_img { background:url(subject/img_0001/bg_01.png) no-repeat 200px 0; margin:-30px auto 0; padding-top:150px;}
.title{ position:absolute; top:160px; left:107px; width:299px; height:56px; text-align:center; line-height:56px; font-size:38px; font-weight:bold; color:#0072bc; }
.time{ position:absolute; top:235px; left:96px; width:370px; height:30px; text-align:left; line-height:30px; font-size:21px; font-weight:bold; color:#004a80; }

/*banner*/
.banner{ position:relative; display:block; width:936px; height:198px; background:url(subject/img_0001/bg_03.png) no-repeat; margin:0 auto 11px auto; }
	.banner_time{ position:absolute; top:14px; right:24px; height:40px; text-align:right; line-height:40px; font-size:22px; color:#fff; text-shadow:1px 1px 2px #7d8198,-1px -1px 2px #7d8198,-1px 1px 2px #7d8198,1px -1px 2px #7d8198,1px 0px 2px #7d8198,0px 1px 2px #7d8198,-1px 0px 2px #7d8198,0px -1px 2px #7d8198;}